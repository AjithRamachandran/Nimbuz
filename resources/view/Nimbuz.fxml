<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="492.0" prefWidth="680.0" stylesheets="style.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Nimbuz.Controller">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="456.0" prefWidth="640.0" styleClass="main" stylesheets="@style.css" VBox.vgrow="ALWAYS">
      <children>
            <TextArea fx:id="chatScreen" editable="false" layoutX="11.0" layoutY="61.0" prefHeight="296.0" prefWidth="657.0" styleClass="text-area" stylesheets="@style.css" />
            <Button fx:id="sndBtn" layoutX="557.0" layoutY="363.0" mnemonicParsing="false" onAction="#sendMessage" prefHeight="26.0" prefWidth="111.0" stylesheets="@style.css" text="Send">
               <styleClass>
                  <String fx:value="blue" />
                  <String fx:value="btn-gradient" />
               </styleClass></Button>
            <TextField fx:id="textField" editable="false" layoutX="14.0" layoutY="363.0" prefHeight="26.0" prefWidth="531.0" promptText="Text" styleClass="text" stylesheets="@style.css" />
            <Button fx:id="cntBtn" layoutX="557.0" layoutY="403.0" mnemonicParsing="false" onAction="#connect" prefHeight="26.0" prefWidth="111.0" stylesheets="@style.css" text="Connect">
               <styleClass>
                  <String fx:value="green" />
                  <String fx:value="btn-gradient" />
               </styleClass></Button>
            <Label fx:id="appName" layoutX="18.0" layoutY="10.0" prefHeight="44.0" prefWidth="168.0" styleClass="h1" stylesheets="@style.css" text="Nimbuz">
               <font>
                  <Font name="LKLUG" size="22.0" />
               </font>
            </Label>
          <TextField fx:id="clientName" layoutX="378.0" layoutY="403.0" prefHeight="26.0" prefWidth="168.0" promptText="Name" styleClass="text" stylesheets="@style.css" />
            <Button fx:id="extBtn" layoutX="589.0" layoutY="19.0" mnemonicParsing="false" onAction="#exitNimbuz" prefHeight="26.0" prefWidth="79.0" stylesheets="@style.css" text="Exit">
               <styleClass>
                  <String fx:value="red" />
                  <String fx:value="btn-gradient" />
               </styleClass></Button>
            <TextField fx:id="localhost" layoutX="14.0" layoutY="403.0" prefHeight="26.0" prefWidth="168.0" promptText="localhost" styleClass="text" stylesheets="@style.css" />
            <TextField fx:id="portNumber" layoutX="198.0" layoutY="403.0" prefHeight="26.0" prefWidth="168.0" promptText="port" styleClass="text" stylesheets="@style.css" />
            <Label fx:id="Status" alignment="CENTER" layoutX="18.0" layoutY="445.0" prefHeight="26.0" prefWidth="645.0" stylesheets="@style.css" text="Disconnected" />
            <Button fx:id="discntBtn" layoutX="465.0" layoutY="19.0" mnemonicParsing="false" onAction="#disConnect" prefHeight="26.0" prefWidth="111.0" stylesheets="@style.css" text="Disconnect">
               <styleClass>
                  <String fx:value="orange" />
                  <String fx:value="btn-gradient" />
               </styleClass></Button>
      </children>
    </AnchorPane>
  </children>
</VBox>
